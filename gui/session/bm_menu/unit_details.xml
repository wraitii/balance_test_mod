				<translatableAttribute id="caption">Presets</translatableAttribute>
			</object>
			<object size="100%-120 -16 100%-16 20"
				    type="button" hidden="false" style="ModernButtonRed">
				<translatableAttribute id="caption">Close</translatableAttribute>
				<action on="Press">UnitDetails.PresetClose();</action>
			</object>

			<object name="bm_ud_presets_list" type="olist"
				style="ModernSortedList" size="16 16 100%-16 100%-16"
				hidden="false"
			>
				<column id="name" color="255 255 255" width="33%">
					<translatableAttribute id="heading">Preset</translatableAttribute>
				</column>
				<column id="desc" color="255 255 255" width="67%">
